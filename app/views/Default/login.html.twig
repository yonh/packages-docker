{% extends 'Default/base.html.twig' %}

{% block body %}
    <h2>Please login.</h2>
    <form method="post" class="form-inline">
        {% if error %}<div class="alert alert-danger">Invalid username or password.</div>{% endif %}
        <p><input class="form-control" type="text" placeholder="Username" name="username"></p>
        <p><input class="form-control" type="password" placeholder="Password" name="password"></p>
        <p><button class="btn btn-primary" type="submit">Submit</button></p>
    </form>
{% endblock %}

{% block login_link %}{% endblock %}
